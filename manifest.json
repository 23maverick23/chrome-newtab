{
    "manifest_version": 2,

    "name": "Chrome Note Tab",
    "short_name": "Chrome Note",
    "version": "1.1",
    "description": "Chrome Note Tab: simple note storage.",

    "author": "Ryan Morrissey @rmorrissey23",
    "homepage_url": "http://ryancmorrissey.com/",

    "icons": {
        "19": "img/icon-19.png",
        "38": "img/icon-19.png",
        "48": "img/icon-48.png",
        "128": "img/icon-128.png"
    },
    "background": {
        "scripts": [
            "js/jquery.min.js",
            "js/store.min.js",
            "js/note.min.js",
            "js/main.js",
            "js/background.js"
        ]
    },
    "browser_action": {
        "default_icon": {
            "19": "img/icon-19.png",
            "38": "img/icon-19.png"
        },
        "default_popup": "popup.html",
        "default_title": "Quick Add Note"
    },
    "permissions": [
        "contextMenus",
        "tabs"
    ],

    "chrome_url_overrides": {
        "newtab": "default.html"
    },
    "offline_enabled": true
}